<h5>管理者ログイン</h5>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group row">
    <%= f.label "メールアドレス", class: "col-sm-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-5" %>
  </div>

  <div class="form-group row">
    <%= f.label "パスワード", class: "col-sm-2" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-5" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary"%>
  </div>
<% end %>
