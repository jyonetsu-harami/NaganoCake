<h4>商品一覧(全<%= @products.count %>件)</h4>
<div class="card-list-containar py-5">
  <div class="d-flex justify-content-center flex-wrap">
   <% @products.each do |product| %>
     <div class="card w-25 mt-4 mx-3 shadow-sm">
      <%= link_to product_path(product.id) do %>
        <%= attachment_image_tag product, :image, class:"card-img-top" %>
      <% end %>  
        <div class="card-body">
          <div class="row">
            <div class="col-12">
              <p class="card-title"><%= product.name %></p>
              <p class="card-text"><%= product.price %>円</p>
            </div>
          </div>
        </div>
      </div>  
    <% end %>  
  </div>  
</div>
<%= paginate @products %>

<style>
.pagination {
  justify-content: center;
}
</style>