<h4>会員一覧</h4>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><p><%= customer.id %></p></td>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <p><%= customer.last_name %><%= customer.first_name %></p>
          <% end %>  
        </td>
        <td><p><%= customer.email %></p></td>
        <td>
          <% if customer.is_active == true %>
            <p class="text-success">有効</p>
          <% elsif customer.is_active == false %>
            <p class="text-secondary">退会</p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>