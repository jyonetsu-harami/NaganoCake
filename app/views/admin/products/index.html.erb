<h4>商品一覧<h4>

<table class='table'>
  <thread>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thread>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= link_to product.name, admin_product_path(product) %></td>
      <td><%= product.price %></td>
      <td><%= product.genre.name %></td>
      <td>
        <% if product.sales_status == true %>
        <p class="text-success">販売中</p>
        <% elsif product.sales_status == false %>
        <p class="text-secondary">販売停止中</p>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @products %>
<style>
.pagination {
  justify-content: center;
}
</style>