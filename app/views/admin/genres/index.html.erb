<h4>ジャンル一覧・追加<h4>
 <div>
  <%= form_with model: [:admin, @genre], local:true do |f| %>
    ジャンル名
    <%= f.text_field :name %>
    <%= f.submit '新規登録', class: 'btn-success btn-sm' %>
  <% end %>
 </div>



<table class='table table-hover table-inverse'>
 <thread>
  <tr>
   <th>ジャンル</th>
   <th>ステータス</th>
  </tr>
 </thread>
 <tbody>
  <% @genres.each do |genre| %>
  <tr>
   <td><%= genre.name %></td>
   <td>
     <% if genre.is_active == true %>
     <p class="text-success">有効</p>
     <% elsif genre.is_active == false %>
     <p class="text-secondary">無効</p>
     <% end %>
     </td>
   <td><%= link_to "編集する", edit_admin_genre_path(genre), class: 'btn-success btn-sm' %></td>
  </tr>
  <% end %>
 </tbody>
</table>