<h4>注⽂履歴一覧</h4>
<table class="table table-bordered">
  <thead>
    <tr class="table-active">
      <th><p>注文日</p></th>
      <th><p>配送先</p></th>
      <th><p>注文商品</p></th>
      <th><p>支払金額</p></th>
      <th><p>ステータス</p></th>
      <th><p>注文詳細</p></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <!--注文日-->
        <td><%= order.created_at %></td>
        <!--配送先-->
        <td>
          <%= order.zipcode %><br>
          <%= order.address %><br>
          <%= order.last_name %><%= order.first_name %><br>
        </td>
        <!--注文商品-->
        <td><%= order.product%></td>
        <!--支払金額-->
        <td><%= order.total_price %></td>
        <!--ステータス-->
        <td><%= order.status %></td>
        <!--注文詳細-->
        <td><%= link_to "表示する", order_path(order) , class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
