<h4>注文情報入力</h4>
<%= form_with model: @order, url: order_confirm_orders_path, local: true do |f| %>
  <div class="mt-3 ml-4">
    <h5 class="">支払方法</h5>
    <div class="ml-4">
      <%= f.radio_button :payment_method, "クレジットカード", class: "custom-radio", checked: true %>
      <span>クレジットカード</span>
    </div>
    <div class="ml-4">
      <%= f.radio_button :payment_method, "銀行振り込み" %>
      <span>銀行振り込み</span>         
    </div>
  </div>

  <div class="mt-3 ml-4">
    <h5>お届け先</h5>
    <div class="ml-4 mb-3"><!--customerテーブルに登録されている住所への配達-->
      <%= f.radio_button :shipping_method, "1", checked: true %>
      <span>ご自身の住所</span>
      <div class="ml-4">
        <span>〒<%= current_customer.zipcode %> <%= current_customer.address %></span><br>
        <span><%= current_customer.last_name %> <%= current_customer.first_name %></span>
      </div>
    </div>
    <div class="ml-4 mb-3"><!--customer.shipping_informationsに登録されている住所への配達-->
      <%= f.radio_button :shipping_method, "2" %>
      <span>登録済み住所から選択</span>
      <div class="ml-4">
        <%= f.collection_select :shipping_information, current_customer.shipping_informations, :id, :merge_zipcode_to_name  %>
      </div>
    </div>
    <div class="ml-4"><!--フォームに入力した新しい配送先住所に配達する。ラジオボタンが選択されていたらorders#createでShipping_information.createする。-->
      <%= f.radio_button :shipping_method, "3" %>
      <span>新しいお届け先</span>
      <div class="ml-4">
        <div class="form-group row">
          <%= f.label :zipcode, "郵便番号（ハイフンなし）", class: "col-3" %>
          <%= f.text_field :zipcode, placeholder: "0000000", class: "form-control col-2" %>
        </div>
        <div class="form-group row">
          <%= f.label :address, "住所", class: "col-3" %>
          <%= f.text_field :address, placeholder: "東京都渋⾕区代々⽊神園町0-0", class: "form-control col-5" %>
        </div>
        <div class="form-group row">
          <%= f.label :name , "宛名", class: "col-3" %>
          <%= f.text_field :name, placeholder: "令和道子", class: "form-control col-2" %>
        </div>
      </div>
    </div>
  </div>
  <div class="col text-center">
    <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
  </div>
<% end %>
